package roboticrace;
public class Robot {
    // instance variable~!
    private int x,y;

    //zero argument constructor~!
    public Robot() {
        x=0;
        y=0;
    }
    //two argument constructors~!
    public Robot(int xPos,int yPos) {
        x = xPos;
        y = yPos;
    }
    //setters for the two variables~!
    public void setX(int setX) {
        x = setX;
    }
    public void setY(int setY) {
        y = setY;
    }
    //getters for the two variables~!
    public int getX() {
        return x;
    }
    public int getY() {
        return y;
    }
    //here is the methods~!
    public void moveNorth() {
        y = y+1;
    }
    public void moveSouth() {
        y = y-1;
    }
    public void moveEast() {
        x = x + 1;
    }
    public void moveWest() {
        x = x - 1;
    }
    public void moveTo(int xPosi, int yPosi) {
        x = xPosi;
        y = yPosi;
    }
    //override toString()~!
    public String toString() {
         String msg;
        return msg = "X:  " + x + "     " + "Y: " + y;
    }
}
class MagicRobot extends Robot {
    //variable~!
    private boolean visible;
    //zero argument constructor
    public MagicRobot() {
        visible = false;
    }
    //methods~!
    public void makeVisible() {
        visible = true;
    }
    public void makeInvisible() {
        visible = false;
    }
    public boolean isVisible() {
        return visible;
    }
    public String toString() {
        String msg;
        String visibleZ;
         if (visible == false) {
             visibleZ = "invisible";
         }
         else {
             visibleZ = "visible";
         }
        return msg = "X: " + getX() + "    " + " Y: " + getY() + ",      " + " and it is " + visibleZ;
    }
    
}
class SpeedRobot extends Robot {
    //variable~!
    private int speed;
    //zero argument constructor~!
    public SpeedRobot() {
        
    }
    //one argument constructor~!
    public SpeedRobot(int theSpeed) {
        speed = theSpeed;
    }
    public void setSpeed(int sSpeed) {
        speed = sSpeed;
    }
    public int getSpeed() {
        return speed;
    }
    public void moveNorth() {
        setY(getY()+speed);
    }
    public void moveSouth() {
        setY(getY()-speed);
    }
    public void moveEast() {
        setX(getX()+speed);
    }
    public void moveWest() {
        setX(getX()-speed);
    }
    public String toString() {
        String msg; 
        return msg = "X: " + getX() + "     " + ",Y: " + getY() + "    "+ " and its speed is   " + getSpeed();
    }
}
class TestRobot_M {
    
    public static void main (String[] args) {
        Robot tetoo = new Robot(5,2);
        Robot detoo = new Robot();
        detoo.setX(3);
        detoo.setY(10);
        System.out.println("tetoo: " + tetoo.toString());
        System.out.println("detoo: " + detoo.toString());
        tetoo.moveEast();
        tetoo.moveEast();
        tetoo.moveEast();
        detoo.moveSouth();
        detoo.moveSouth();
        System.out.println("tetoo: " + tetoo.toString());
        System.out.println("detoo: " + detoo.toString());
        MagicRobot medoo = new MagicRobot();
        System.out.println(medoo.toString());
        medoo.setX(3);
        medoo.setY(5);
        System.out.println(medoo.toString());
        medoo.makeVisible();
        System.out.println(medoo.toString());
        medoo.moveTo(9, 11);
        System.out.println(medoo.toString());
        SpeedRobot speedoo = new SpeedRobot(5);
        System.out.println(speedoo.toString());
        speedoo.moveNorth();
        speedoo.moveNorth();
        speedoo.moveWest();
        speedoo.moveWest();
        speedoo.setSpeed(10);
        System.out.println(speedoo.toString());
        speedoo.moveTo(4, 5);
        
    }
}
